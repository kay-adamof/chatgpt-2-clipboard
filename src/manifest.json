{
  "manifest_version": 3,
  "name": "ChatGPT Clipboard Extension",
  "version": "1.0",
  "description": "An extension for copying ChatGPT conversations as Markdown format to paste any editor",
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/chat/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline' https://cdn.jsdelivr.net;"
  }
}
